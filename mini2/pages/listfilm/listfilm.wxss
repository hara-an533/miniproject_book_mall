.bigContainer {
}
.flex {
  display: flex;
}

.vcenter {
  align-items: center;
}
.search {
  width: 730rpx;
  height: 57rpx;
  background-color: #FFDFEC;
  margin:0 auto;
  margin-top: 10rpx;
  border-radius: 40rpx;
}
.search image {
  width: 27rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

.search .search-title {
  font-size: 25rpx;
  color: #B2B1B1;
  margin-left: 13rpx;
}

.before {
  width: 5rpx;
  height: 28rpx;
  background-color: #ff0000;
  margin-right: 10rpx;
}
.first_box {
  margin-top: 10rpx;
  padding: 0 20rpx;
}
.aftertext {
  font-size: 24rpx;
  color: #4F4F4F;
}

.List {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-bottom: 20rpx;

}
.leixinglist {
  color: #999;
  margin-right: 5rpx;
  border: 1px solid #999;
  font-size: 20rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 2rpx 10rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
}
.red {
  color: red;
  border-color: red
}
.greens {
  background-color: #99CC00;
}
.green {
  border-color: #99CC00;
  color: #99CC00;
}
.bottomlist {
  box-sizing: border-box;
  border-top: 1px solid #ccc;
  height: 370rpx;
  padding: 30rpx 30rpx;

}

.bottomlist image {
  width: 180rpx;
  height: 230rpx;
}

.right-text {
  margin-left: 35rpx;
}
.first-one {
  font-size: 28rpx;
  font-weight: bold;
}

.first-other {
  font-size: 23rpx;
  color: #666;
  margin-top: 5rpx;
}
.text-color {
  color: #E43728;
  margin-bottom: 5rpx;
}
.text-size {
  font-size: 30rpx;
}
.text-size1 {
  font-size: 26rpx;
}
.text-size3 {
  font-size: 24rpx;
}
.starFive image{
  width: 25rpx;
  height: 25rpx;
}
.wang-size {
  color: #A7A7A7;
  font-size: 20rpx;
}