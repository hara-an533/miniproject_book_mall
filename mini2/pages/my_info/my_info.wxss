/* pages/my_info/my_info.wxss */

page{
  background-color: #f1f1f1;
}

.infoForm{
  width: 705rpx;
  height: 549rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding:30rpx 15rpx 0;
}
.infoInput{
  font-size: 26rpx;
  color: #666;
  padding-bottom: 15rpx;
  padding-left: 20rpx;
  border-bottom: #d8d8d8 1px solid;
  margin-bottom: 50rpx;
}
.bottom{
  border-bottom: rgb(241, 241, 241) solid 1px;
}

.goPhoto{
  width: 200rpx;
  height: 50rpx;
}
.chooseOrTake{
  position: relative;
  left:-300rpx;
  top:-30rpx;
  width: 251rpx;
  height: 33rpx;
  background-color: #99cc00;
  color: #fff;
  font-size: 20rpx;
  border-radius: 15rpx;
  text-align: center;
}


.submitItem{
  height: 92rpx;
  width: 730rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 50rpx;
}
.submitBtn{
  background-color: #ff0000;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-left: 170rpx;
  margin-right: 80rpx;
}
.resetBtn{
  background-color: #999;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 30rpx;
}
.addressBox{
  position: relative;
}
.addressBox .infoInput{
  width: 520rpx;
}
.map{
  width: 143rpx;
  height: 38rpx;
  line-height: 38rpx;
  color: #fff;
  background-color: #9999ff;
  font-size: 20rpx;
  border-radius: 19rpx;
  text-align: center;
  position: absolute;
  right: 0;
}
.flex {
  display: flex;
}
.flexrow{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.flexAlignItem {
  align-items: center;
}