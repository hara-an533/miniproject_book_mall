/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.flex {
  display: flex;

}
.vcenter {
  align-items: center;
}

.sb {
  justify-content: space-between
}

/**底部购物车**/

.footer {
  flex-shrink: 0;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
}
.views {
  width: 290rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
  background-color: #fff;

}
.views-2 {
  width: 290rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}
.yellow {
  background-color: #ffb350;
}
.red{
  background-color: #E53E30

}
.cuole {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cuole image {
  width: 45rpx;
  height: 45rpx;
}
.picture {
  color: #666;
  font-size: 20rpx;
}
.postionms {
  position: relative;
}
.postionms-1 {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #ff4444;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 24rpx;
}